<UserControl x:Class="BibleProjector_WPF.ReserveOptionViews.PreviewBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibleProjector_WPF.ReserveOptionViews"
             mc:Ignorable="d" 
             d:DesignHeight="235.328" d:DesignWidth="315.082">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding PreviewText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Grid.Row="1" Content="중복 엔터 삭제" HorizontalAlignment="Right" Width="100"></Button>
    </Grid>
</UserControl>
