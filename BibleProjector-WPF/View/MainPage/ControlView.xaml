<UserControl x:Class="BibleProjector_WPF.View.MainPage.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibleProjector_WPF.View.MainPage"
             mc:Ignorable="d" 
             Height="620" Width="900"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--상/하단 페이지 컨트롤러-->
        <ContentControl Grid.Row="0" Content="{Binding VM_ShowControler_top}"></ContentControl>
        <ContentControl Grid.Row="2" Content="{Binding VM_ShowControler_bottom}"></ContentControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="230*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>

                <!--외부PPT 조작-->
                <Grid Grid.Row="0" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22*"/>
                        <RowDefinition Height="133*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FFF7F7F7" CornerRadius="4" Margin="1" BorderBrush="Black" BorderThickness="1">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                            외부 PPT 등록 및 편집
                        </TextBlock>
                    </Border>

                    <WrapPanel Grid.Row="1" Margin="1,1,1,8" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                        <local:ExternPPTSetter Margin="4,2,4,2"></local:ExternPPTSetter>
                    </WrapPanel>
                </Grid>

                <!--기타 문구 등록-->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="100*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FFF7F7F7" CornerRadius="4" Margin="1" BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="127*"/>
                                <ColumnDefinition Width="20*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            사도신경 / 주기도문 / 비전선언문
                            </TextBlock>

                            <Button Grid.Column="1" Margin="1.5">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock Text="✚" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                            </Button>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFA3EEA3"/>
                                </Style>
                            </StackPanel.Resources>
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFF9F9B3"/>
                                </Style>
                            </StackPanel.Resources>
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                            <local:AdditionalContentButton/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!--검색-->
            <ContentControl Grid.Column="1" Margin="5" Content="{Binding VM_SearchControl}"/>

            <!--예약 목록-->
            <Grid Grid.Column="2" Margin="5" DataContext="{Binding VM_ReserveList}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="12*"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="Black" BorderThickness="1,1,1,0">
                    <Label Background="LightGray" Padding="0" FontSize="13" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        예 약 목 록
                    </Label>
                </Border>
                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
                    <ScrollViewer
                        x:Name="ReserveScrollViewer"
                        ScrollViewer.CanContentScroll="False">
                        <ScrollViewer.Resources>
                            <local:ReserveItemTemplateSelector x:Key="reserveItemTemplateSelector"/>
                        </ScrollViewer.Resources>
                        
                        <ListBox
                            x:Name="ReserveListBox"
                            SelectionMode="Extended"
                            AllowDrop="true"
                            PreviewMouseDown="ReserveListBox_PreviewMouseDown"
                            MouseUp="ConfirmSelection"
                            PreviewMouseWheel="ScrollByWheel"
                            SelectionChanged="ReserveListBox_SelectionChanged"
                            DragOver="OnDragOver"       
                            Drop="DragEnd"
                            ItemsSource="{Binding ReserveContents}"
                            ItemTemplateSelector="{StaticResource ResourceKey=reserveItemTemplateSelector}"
                            xmlns:rtype="clr-namespace:BibleProjector_WPF">
                            <ListBox.Resources>
                                <DataTemplate x:Key="NormalItem">
                                    <local:ReserveItem/>
                                </DataTemplate>
                                <!--드래그 항목 표시-->
                                <DataTemplate x:Key="DragPreview">
                                    <local:ReserveItem/>
                                </DataTemplate>
                                <!--드래그 드롭 위치 표시-->
                                <DataTemplate x:Key="DropPreview">
                                    <Border Margin="0" Height="13" BorderBrush="Black" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                                        <Border Margin="2,0,0,1" Padding="0" Background="#FFCCE7FF" BorderBrush="Gray" BorderThickness="1,1,0,0">
                                        </Border>
                                    </Border>
                                </DataTemplate>
                            </ListBox.Resources>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="0,2,0,0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <EventSetter Event="MouseMove" Handler="GetMouseMove"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewType}" Value="{x:Static rtype:ReserveViewType.DragPreview}">
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                            <Setter Property="Margin" Value="0,-22,0,0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
