<UserControl x:Class="BibleProjector_WPF.ReserveUnitBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BibleProjector_WPF"
             mc:Ignorable="d">
    <Grid Background="{Binding BackColor}">
        <TextBlock Text="{Binding DisplayInfo}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Margin="5,2,5,2"></TextBlock>
    </Grid>
</UserControl>
