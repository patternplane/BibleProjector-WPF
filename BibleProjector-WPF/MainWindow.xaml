<Window x:Class="BibleProjector_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibleProjector_WPF"
        mc:Ignorable="d"
        Title="Presenter" Height="612.79" Width="1053.488">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="603*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="998*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Row="1" Grid.Column="1">

            <!--성경-->
            <TabItem Header="성경">
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="17*"/>
                        <RowDefinition Height="499*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="257*"/>
                        <ColumnDefinition Width="237*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="85*"/>
                        <ColumnDefinition Width="26*"/>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="204*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <!--구약 책 선택버튼-->
                    <Border Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="#FFABADB3">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" >
                            <ItemsControl x:Name="Bible_OldTestButtons_ItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Left" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button 
                                            Content="{Binding Path=BookTitle}"
                                            Tag="{Binding Path=BookNumber}"
                                            Click="BibleButton_Click"
                                            Width="80"
                                            Height="25"
                                            Margin="5,5,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                    </ScrollViewer>
                    </Border>

                    <!--신약 책 선택버튼-->
                    <Border Grid.Row="1" Grid.Column="2" BorderThickness="1" BorderBrush="#FFABADB3">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" >
                            <ItemsControl x:Name="Bible_NewTestButtons_ItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button 
                                            Content="{Binding Path=BookTitle}"
                                            Tag="{Binding Path=BookNumber}"
                                            Click="BibleButton_Click"
                                            Width="80"
                                            Height="25"
                                            Margin="5,5,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <ListBox Grid.Row="1" Grid.Column="4" x:Name="Bible_Chapter_ListBox"></ListBox>
                    <ListBox Grid.Row="1" Grid.Column="6" x:Name="Bible_Verse_ListBox"></ListBox>
                    <Grid Grid.Row="1" Grid.Column="8" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="86*"/>
                            <RowDefinition Height="11*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="57*"/>
                            <RowDefinition Height="254*"/>
                            <RowDefinition Height="71*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </Grid>
            </TabItem>

            <!--교독문, 찬양곡, 외부ppt-->
            <TabItem Header="그 외">
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22*"/>
                        <RowDefinition Height="490*"/>
                        <RowDefinition Height="19*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="246*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="393*"/>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="268*"/>
                        <ColumnDefinition Width="24*"/>
                    </Grid.ColumnDefinitions>
                    <!--교독문 Grid-->
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="431*"/>
                            <RowDefinition Height="13*"/>
                            <RowDefinition Height="79*"/>
                        </Grid.RowDefinitions>
                        <ListBox Grid.Row="0"></ListBox>
                        <Button Grid.Row="2"></Button>
                    </Grid>
                    <!--찬양곡 Grid-->
                    <Grid Grid.Row="1" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="189*"/>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="57*"/>
                        </Grid.ColumnDefinitions>
                        <TabControl Grid.Column="0">
                            <!--곡 선택-->
                            <TabItem Header="곡 선택">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="7*"/>
                                        <RowDefinition Height="30*"/>
                                        <RowDefinition Height="9*"/>
                                        <RowDefinition Height="40*"/>
                                        <RowDefinition Height="9*"/>
                                        <RowDefinition Height="40*"/>
                                        <RowDefinition Height="9*"/>
                                        <RowDefinition Height="309*"/>
                                        <RowDefinition Height="25*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="18*"/>
                                        <ColumnDefinition Width="228*"/>
                                        <ColumnDefinition Width="17*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="211*"/>
                                            <ColumnDefinition Width="14*"/>
                                            <ColumnDefinition Width="70*"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0" x:Name="SearchComboBox" IsEditable="true" IsTextSearchEnabled="false">
                                        </ComboBox>
                                        <Button Grid.Column="2" Content="검색하기" x:Name="SearchButton"/>
                                    </Grid>

                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="211*"/>
                                            <ColumnDefinition Width="14*"/>
                                            <ColumnDefinition Width="70*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0" x:Name="LyricComboBox"/>
                                        <Button Grid.Column="2" Content="곡 삭제" x:Name="LyricDeleteButton" IsEnabled="{Binding showDeleteButton}"/>
                                    </Grid>

                                    <Grid Grid.Row="5" Grid.Column="1" x:Name="ModifyButtonGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="163*"/>
                                            <ColumnDefinition Width="11*"/>
                                            <ColumnDefinition Width="54*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding SelectedItem.title, ElementName=LyricComboBox, Mode=OneWay}" x:Name="LyricTitleModifyTextBox" HorizontalScrollBarVisibility="auto"/>
                                        <Button Grid.Column="2" Content="곡/제목 수정" IsEnabled="{Binding showModifyButton, Mode=OneWay}" x:Name="LyricModifyButton"/>
                                    </Grid>

                                    <TextBox 
                        Grid.Row="7" 
                        Grid.Column="1" 
                        AcceptsReturn="True" 
                        HorizontalScrollBarVisibility="Auto" 
                        VerticalScrollBarVisibility="auto" 
                        x:Name="LyricContentTextBox"
                        Text="{Binding SelectedItem.content, ElementName=LyricComboBox, Mode=OneWay}"/>
                                </Grid>
                            </TabItem>

                            <!--곡 추가-->
                            <TabItem Header="곡 추가" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="10*"/>
                                        <RowDefinition Height="30*"/>
                                        <RowDefinition Height="14*"/>
                                        <RowDefinition Height="41*"/>
                                        <RowDefinition Height="14*"/>
                                        <RowDefinition Height="267*"/>
                                        <RowDefinition Height="21*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="18*"/>
                                        <ColumnDefinition Width="228*"/>
                                        <ColumnDefinition Width="17*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Row="1" Grid.Column="1" Content="추가" x:Name="LyricAddButton"/>

                                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="LyricAddTitle"/>

                                    <TextBox 
                        Grid.Row="5" 
                        Grid.Column="1" 
                        AcceptsReturn="True" 
                        HorizontalScrollBarVisibility="Auto" 
                        VerticalScrollBarVisibility="auto"
                        x:Name="LyricAddContent"/>
                                </Grid>
                            </TabItem>

                            <!--곡 예약-->
                            <TabItem Header="예약">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="18*"/>
                                        <RowDefinition Height="509*"/>
                                        <RowDefinition Height="20*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="22*"/>
                                        <ColumnDefinition Width="200*"/>
                                        <ColumnDefinition Width="25*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListBox Grid.Row="1" Grid.Column="1"></ListBox>
                                </Grid>
                            </TabItem>
                        </TabControl>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="31*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="11*"/>
                                <RowDefinition Height="196*"/>
                            </Grid.RowDefinitions>
                            <Label >
                                시작 슬라이드
                            </Label>
                            <TextBox Grid.Row="1"></TextBox>
                            <Button Grid.Row="3">

                            </Button>
                        </Grid>
                    </Grid>
                    <!--외부 ppt 등록 Grid-->
                    <Grid Grid.Row="1" Grid.Column="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16*"/>
                            <RowDefinition Height="59*"/>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="308*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="93*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="125*"/>
                                <ColumnDefinition Width="21*"/>
                                <ColumnDefinition Width="122*"/>
                            </Grid.ColumnDefinitions>
                            <Button>

                            </Button>
                            <Button Grid.Column="2"></Button>
                        </Grid>
                        <ListBox Grid.Row="3"></ListBox>
                        <Button Grid.Row="5"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
